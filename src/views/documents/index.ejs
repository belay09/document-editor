<%- include('../layout', { title: 'My Documents', user: user }) %>

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">My Documents</h1>
      <p class="mt-1 text-sm text-gray-500">Manage and access your documents</p>
    </div>
    <div class="mt-4 md:mt-0 flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3">
      <a href="/documents/upload" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="17 8 12 3 7 8"></polyline>
          <line x1="12" y1="3" x2="12" y2="15"></line>
        </svg>
        Upload
      </a>
      <div class="relative inline-block text-left">
        <button id="createMenuButton" type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          Create new
        </button>
        <div id="createMenu" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10" role="menu" aria-orientation="vertical" aria-labelledby="create-menu-button">
          <div class="py-1" role="none">
            <a href="/documents/create/docx" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              Word Document
            </a>
            <a href="/documents/create/xlsx" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="3" y1="9" x2="21" y2="9"></line>
                <line x1="3" y1="15" x2="21" y2="15"></line>
                <line x1="9" y1="3" x2="9" y2="21"></line>
                <line x1="15" y1="3" x2="15" y2="21"></line>
              </svg>
              Excel Spreadsheet
            </a>
            <a href="/documents/create/pptx" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-red-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                <polyline points="13 2 13 9 20 9"></polyline>
              </svg>
              PowerPoint Presentation
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Document Tabs -->
  <div class="mb-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <button id="myDocsTab" class="border-primary-500 text-primary-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          My Documents
        </button>
        <button id="sharedDocsTab" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          Shared with me
        </button>
      </nav>
    </div>
  </div>

  <!-- My Documents Tab Content -->
  <div id="myDocsContent" class="bg-white shadow overflow-hidden sm:rounded-md">
    <% if (documents.filter(doc => doc.owner._id.toString() === user._id.toString()).length > 0) { %>
      <ul class="divide-y divide-gray-200">
        <% documents.filter(doc => doc.owner._id.toString() === user._id.toString()).forEach(document => { %>
          <li class="hover:bg-gray-50 transition-colors duration-150">
            <a href="/documents/<%= document._id %>" class="block">
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <% if (document.fileType === 'docx') { %>
                      <div class="flex-shrink-0 h-10 w-10 rounded bg-blue-50 flex items-center justify-center text-blue-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                          <polyline points="14 2 14 8 20 8"></polyline>
                          <line x1="16" y1="13" x2="8" y2="13"></line>
                          <line x1="16" y1="17" x2="8" y2="17"></line>
                          <polyline points="10 9 9 9 8 9"></polyline>
                        </svg>
                      </div>
                    <% } else if (document.fileType === 'xlsx') { %>
                      <div class="flex-shrink-0 h-10 w-10 rounded bg-green-50 flex items-center justify-center text-green-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="3" y1="9" x2="21" y2="9"></line>
                          <line x1="3" y1="15" x2="21" y2="15"></line>
                          <line x1="9" y1="3" x2="9" y2="21"></line>
                          <line x1="15" y1="3" x2="15" y2="21"></line>
                        </svg>
                      </div>
                    <% } else if (document.fileType === 'pptx') { %>
                      <div class="flex-shrink-0 h-10 w-10 rounded bg-red-50 flex items-center justify-center text-red-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                          <polyline points="13 2 13 9 20 9"></polyline>
                        </svg>
                      </div>
                    <% } %>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= document.title %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= document.filename %>
                      </div>
                    </div>
                  </div>
                  <div class="ml-2 flex-shrink-0 flex">
                    <span class="text-xs text-gray-500">
                      <% 
                        const date = new Date(document.updatedAt);
                        const formattedDate = date.toLocaleDateString('en-US', { 
                          year: 'numeric', 
                          month: 'short', 
                          day: 'numeric' 
                        });
                      %>
                      Last modified: <%= formattedDate %>
                    </span>
                  </div>
                </div>
              </div>
            </a>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <div class="py-12 flex flex-col items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900">No documents</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new document or uploading one.</p>
      </div>
    <% } %>
  </div>

  <!-- Shared Documents Tab Content -->
  <div id="sharedDocsContent" class="hidden bg-white shadow overflow-hidden sm:rounded-md">
    <% if (documents.filter(doc => doc.owner._id.toString() !== user._id.toString()).length > 0) { %>
      <ul class="divide-y divide-gray-200">
        <% documents.filter(doc => doc.owner._id.toString() !== user._id.toString()).forEach(document => { %>
          <li class="hover:bg-gray-50 transition-colors duration-150">
            <a href="/documents/<%= document._id %>" class="block">
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <% if (document.fileType === 'docx') { %>
                      <div class="flex-shrink-0 h-10 w-10 rounded bg-blue-50 flex items-center justify-center text-blue-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                          <polyline points="14 2 14 8 20 8"></polyline>
                          <line x1="16" y1="13" x2="8" y2="13"></line>
                          <line x1="16" y1="17" x2="8" y2="17"></line>
                          <polyline points="10 9 9 9 8 9"></polyline>
                        </svg>
                      </div>
                    <% } else if (document.fileType === 'xlsx') { %>
                      <div class="flex-shrink-0 h-10 w-10 rounded bg-green-50 flex items-center justify-center text-green-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="3" y1="9" x2="21" y2="9"></line>
                          <line x1="3" y1="15" x2="21" y2="15"></line>
                          <line x1="9" y1="3" x2="9" y2="21"></line>
                          <line x1="15" y1="3" x2="15" y2="21"></line>
                        </svg>
                      </div>
                    <% } else if (document.fileType === 'pptx') { %>
                      <div class="flex-shrink-0 h-10 w-10 rounded bg-red-50 flex items-center justify-center text-red-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                          <polyline points="13 2 13 9 20 9"></polyline>
                        </svg>
                      </div>
                    <% } %>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= document.title %>
                      </div>
                      <div class="text-sm text-gray-500">
                        Shared by <%= document.owner.name %>
                      </div>
                    </div>
                  </div>
                  <div class="ml-2 flex-shrink-0 flex">
                    <span class="text-xs text-gray-500">
                      <% 
                        const date = new Date(document.updatedAt);
                        const formattedDate = date.toLocaleDateString('en-US', { 
                          year: 'numeric', 
                          month: 'short', 
                          day: 'numeric' 
                        });
                      %>
                      Last modified: <%= formattedDate %>
                    </span>
                  </div>
                </div>
              </div>
            </a>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <div class="py-12 flex flex-col items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
          <polyline points="16 6 12 2 8 6"></polyline>
          <line x1="12" y1="2" x2="12" y2="15"></line>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900">No shared documents</h3>
        <p class="mt-1 text-sm text-gray-500">No documents have been shared with you yet.</p>
      </div>
    <% } %>
  </div>
</div>

<script>
  // Tab switching functionality
  const myDocsTab = document.getElementById('myDocsTab');
  const sharedDocsTab = document.getElementById('sharedDocsTab');
  const myDocsContent = document.getElementById('myDocsContent');
  const sharedDocsContent = document.getElementById('sharedDocsContent');

  myDocsTab.addEventListener('click', () => {
    myDocsTab.classList.add('border-primary-500', 'text-primary-600');
    myDocsTab.classList.remove('border-transparent', 'text-gray-500');
    sharedDocsTab.classList.remove('border-primary-500', 'text-primary-600');
    sharedDocsTab.classList.add('border-transparent', 'text-gray-500');
    myDocsContent.classList.remove('hidden');
    sharedDocsContent.classList.add('hidden');
  });

  sharedDocsTab.addEventListener('click', () => {
    sharedDocsTab.classList.add('border-primary-500', 'text-primary-600');
    sharedDocsTab.classList.remove('border-transparent', 'text-gray-500');
    myDocsTab.classList.remove('border-primary-500', 'text-primary-600');
    myDocsTab.classList.add('border-transparent', 'text-gray-500');
    sharedDocsContent.classList.remove('hidden');
    myDocsContent.classList.add('hidden');
  });

  // Create menu toggle
  const createMenuButton = document.getElementById('createMenuButton');
  const createMenu = document.getElementById('createMenu');
  
  if (createMenuButton && createMenu) {
    createMenuButton.addEventListener('click', function() {
      createMenu.classList.toggle('hidden');
    });
    
    // Close the menu when clicking outside
    document.addEventListener('click', function(event) {
      if (!createMenuButton.contains(event.target) && !createMenu.contains(event.target)) {
        createMenu.classList.add('hidden');
      }
    });
  }
</script>

<%- include('footer') %>